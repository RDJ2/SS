#A]define complex number
a=complex(input("Enter real nnumber :"))
print("The complex number is this ",a)
a=int(input("Enter real nnumber :"))
b=int(input("Enter  imageinary number "))
c= complex(a,b)
print("The complex number is this ",c)

#B]arthmatic operation on complex number
def inputs():
    a=int(input("Enter real number "))
    b=int(input("Enter  imageinary number "))
    c= complex(a,b)
    print("The complex number is",a)
    return c;

d1=inputs()
print(d1)
d2=inputs()
print("The addition is ",d1+d2)
print("The substraction is",d1-d2)
print("The Multiplication is",d1*d2)
print("The Divison is",d1/d2)
print("The conjugate of Complex is ",d1.conjugate())
print("The imageinary number",d1.imag)
print("The real number ",d1.real)

#C]plotting a set of complex number
import matplotlib.pyplot as plt
data=[1+2j,-1+4j,4+3j,-4,2-1j,3+9j,-2+6j,5]
x=[x.real for x in data]
y=[y.imag for y in data]

plt.scatter(x,y)
plt.ylabel('Imaginary')
plt.xlabel('Real')
plt.show()


#D]Conjugate of a complex number 
def inputs():
    a=int(input("Enter real number: "))
    b=int(input("Enter imaginary number: "))
    c=complex(a,b)
    print("The complex number is: ")
    return c;
x=inputs()
print(x)
print("The conjugate of complex number is:",x.conjugate())
print("The imaginary number is: ",x.imag)
print("The real number=",x.real)
